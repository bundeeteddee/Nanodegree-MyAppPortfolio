<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Application List Style -->
    <style name="ApplicationList" />
    <style name="ApplicationList.Header">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="ApplicationList.ProjectButton">
        <item name="android:background">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_listing_button</item>
        <item name="android:layout_marginTop">@dimen/margin_listing_button_top</item>
    </style>

</resources>
